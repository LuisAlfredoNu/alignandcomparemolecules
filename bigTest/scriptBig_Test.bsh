#!/bin/bash

mkdir -p Comparations/Outputs
mkdir -p Comparations/ImagesFromVMD
mkdir -p Comparations/Vectors

bigTestFolder=$(pwd)

rm Comparations/Outputs/*.alignOutput
rm Comparations/ImagesFromVMD/*.png

for i in $(ls -v1)
do
	if [[ -d "$i/Opt_Geo_2" ]]
	then
		cd $i/Opt_Geo_2/
      echo "Run comparations of ${i%"/Opt_Geo_2/"}"
		bash ${bigTestFolder}/Scripts/scriptMake_All_Comparations.bsh
		cd Comparations/
		for ii in $(ls -v1 *.alignOutput)
		do
			base_file_name=${ii#comparations_}
			cp $ii ../../../Comparations/Outputs/"comparations_"$i"_folder_"$base_file_name
		done
		cd ..
		cp ImagesFromVMD/*.png ../../Comparations/ImagesFromVMD/.
      cp Vectors/*.png ../../Comparations/Vectors/.

		cd ../..
	fi
done
cd Comparations
bash ${bigTestFolder}/Comparations/translato2Latex.bsh 
bash ${bigTestFolder}/Comparations/translato2Latex-table.bsh
mv *.tex ../tex/

cd ../tex/
pdflatex report_of_comparations.tex

