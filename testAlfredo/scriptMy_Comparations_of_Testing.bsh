#!/bin/bash

mkdir -p Comparations
mkdir -p Comparations/ImagesFromVMD

rm Comparations/*.alignOutput
rm Comparations/ImagesFromVMD/*.png

for i in $(ls)
do
	if [[ -d "$i/Opt_Geo_2" ]]
	then
		cd $i/Opt_Geo_2/
		~/Programacion/alignandcomparemolecules/testAlfredo/scriptMake_All_Comparations.bsh
		cd Comparations/
		for ii in $(ls *.alignOutput)
		do
			base_file_name=${ii#comparations_}
			cp $ii ../../../Comparations/"comparations_"$i"_folder_"$base_file_name
		done
		cd ..
		cp *.png ../../Comparations/ImagesFromVMD/.

		cd ../..
	fi
done
cd Comparations
~/Programacion/alignandcomparemolecules/testAlfredo/Comparations/zz-translato2Latex.bsh > allResult.tex
~/Programacion/alignandcomparemolecules/testAlfredo/Comparations/zz-translato2Latex-table.bsh
cp *.tex ~/Documentos/Tesis/reportprofes/.
mkdir -p ~/Documentos/Tesis/reportprofes/Images/ImagesFromVMD/.
cp ImagesFromVMD/*  ~/Documentos/Tesis/reportprofes/Images/ImagesFromVMD/.

